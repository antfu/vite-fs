{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ],
  "include": [
    "**/*.vue",
    "**/*.d.ts",
    "**/*.ts"
  ]
}
